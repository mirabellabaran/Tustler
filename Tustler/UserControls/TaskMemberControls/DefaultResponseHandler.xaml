<UserControl x:Class="Tustler.UserControls.TaskMemberControls.DefaultResponseHandler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:Tustler.UserControls.TaskMemberControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="10" Padding="5" Margin="5">
        <UniformGrid x:Name="LayoutRoot">
            <TextBlock x:Name="tbInfo" Style="{StaticResource TextBlockDark}" />
        </UniformGrid>
    </Border>
</UserControl>
