<UserControl x:Class="Tustler.UserControls.TaskMemberControls.TaskContinue"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:Tustler.UserControls.TaskMemberControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static uc:TaskContinueCommands.Continue}" CanExecute="Continue_CanExecute" Executed="Continue_Executed" />
    </UserControl.CommandBindings>

    <Grid>
        <StackPanel Orientation="Horizontal">
            <Label Foreground="#637074" Background="#BDD4E7" FontWeight="Bold" Margin="10" Content="{Binding Path=Item}" />
            <Button Content="Continue?" Height="30" Width="80" Command="{x:Static uc:TaskContinueCommands.Continue}" Style="{StaticResource ButtonDarkFlat}" />
        </StackPanel>
    </Grid>
</UserControl>
