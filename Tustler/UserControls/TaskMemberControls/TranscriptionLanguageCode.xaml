<UserControl x:Class="Tustler.UserControls.TaskMemberControls.TranscriptionLanguageCode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tustler.UserControls.TaskMemberControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderThickness="10">
        <Border.Resources>
            <Style x:Key="comboBoxStyles" TargetType="ComboBox" BasedOn="{StaticResource ComboBoxStyleCustom}">
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
            <DataTemplate x:Key="comboBoxItemTempate">
                <TextBlock Text="{Binding Path=Name}" />
            </DataTemplate>
        </Border.Resources>
        <ComboBox x:Name="cbLanguage" Height="30" Style="{StaticResource comboBoxStyles}" SelectionChanged="cbLanguage_SelectionChanged" ItemsSource="{Binding Source={StaticResource transcriptionLanguageCodesInstance}, Path=LanguageCodes}" ItemTemplate="{StaticResource comboBoxItemTempate}" SelectedValue="en" SelectedValuePath="Code" />
    </Border>
</UserControl>
