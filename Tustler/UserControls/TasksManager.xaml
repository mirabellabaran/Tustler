<UserControl x:Class="Tustler.UserControls.TasksManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tustler.Models"
             xmlns:model="clr-namespace:TustlerModels;assembly=TustlerModels"
             xmlns:uc="clr-namespace:Tustler.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static uc:TaskCommands.StartTask}" CanExecute="StartTask_CanExecute" Executed="StartTask_Executed" />
        <CommandBinding Command="{x:Static uc:TaskCommands.UpdateTaskArguments}" CanExecute="UpdateTaskArguments_CanExecute" Executed="UpdateTaskArguments_Executed" />
    </UserControl.CommandBindings>

    <StackPanel Orientation="Vertical" Margin="20">
        <Button Content="Start Task" Grid.Row="0" Grid.Column="0" Height="30" Width="100" Margin="0,5,0,0" Command="{x:Static uc:TaskCommands.StartTask}" Style="{StaticResource ButtonDark}" />
        <Grid x:Name="grdMembers" ShowGridLines="True" Margin="10">
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <ListBox x:Name="lbTaskResponses" Grid.Row="1" Grid.Column="0" Margin="20, 10, 20, 10" Background="{StaticResource ContrastingBackground}"></ListBox>
        </Grid>
    </StackPanel>
</UserControl>
