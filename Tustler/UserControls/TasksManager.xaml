<UserControl x:Class="Tustler.UserControls.TasksManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TustlerModels;assembly=TustlerModels"
             xmlns:fsharp="clr-namespace:TustlerFSharpPlatform;assembly=TustlerFSharpPlatform"
             xmlns:helpers="clr-namespace:Tustler.Helpers"
             xmlns:uc="clr-namespace:Tustler.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <UserControl.CommandBindings>
        <CommandBinding Command="{x:Static uc:TaskCommands.StartTask}" CanExecute="StartTask_CanExecute" Executed="StartTask_Executed" />
        <CommandBinding Command="{x:Static uc:TaskCommands.StartMiniTask}" CanExecute="StartMiniTask_CanExecute" Executed="StartMiniTask_Executed" />
        <CommandBinding Command="{x:Static uc:TaskCommands.UpdateTaskArguments}" CanExecute="UpdateTaskArguments_CanExecute" Executed="UpdateTaskArguments_Executed" />
    </UserControl.CommandBindings>

    <UserControl.Resources>

        <helpers:TaskManagerDataTemplateSelector x:Key="taskManagerDataTemplateSelector"/>
        <helpers:TaskManagerChildDataTemplateSelector x:Key="taskManagerChildDataTemplateSelector"/>

        <DataTemplate x:Key="TaskInfoTemplate" DataType="{x:Type fsharp:TaskResponse}">
            <TextBlock Foreground="Green" Text="{Binding Path=Item}" />
        </DataTemplate>

        <DataTemplate x:Key="TaskCompleteTemplate" DataType="{x:Type fsharp:TaskResponse}">
            <TextBlock Foreground="Green" Text="{Binding Path=Item}" />
        </DataTemplate>

        <DataTemplate x:Key="BucketTemplate" DataType="{x:Type local:Bucket}">
            <Button Command="{x:Static uc:TaskCommands.StartMiniTask}" Background="{StaticResource ContrastingBackground}" Margin="10">
                <Button.CommandParameter>
                    <helpers:TaskManagerCommandParameterValue ParameterType="Select">
                        <helpers:TaskManagerCommandParameterArgument ItemType="System.String" ItemKey="Name" />
                    </helpers:TaskManagerCommandParameterValue>
                </Button.CommandParameter>
                <Button.Content>
                    <Border Name="border" BorderBrush="BlanchedAlmond" CornerRadius="10" BorderThickness="5" Padding="5" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=Name}" />
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Creation Date:"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=CreationDate}"/>
                        </Grid>
                    </Border>
                </Button.Content>
            </Button>
        </DataTemplate>

        <DataTemplate x:Key="BucketItemTemplate" DataType="{x:Type fsharp:TaskResponse}">
            <Border Name="border" BorderBrush="BlanchedAlmond" CornerRadius="3" BorderThickness="3" Padding="5" Margin="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Key:"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=Item.Key}" />
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Size:"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Path=Item.Size}"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="LastModified:"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=Item.LastModified}"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Owner:"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Path=Item.Owner}"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="MimeType:"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Path=Item.MimeType}"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Extension:"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding Path=Item.Extension}"/>

                    <Button Grid.Row="3" Grid.Column="3" Content="Delete" Command="{x:Static uc:TaskCommands.StartMiniTask}" Style="{StaticResource ButtonDark}">
                        <Button.CommandParameter>
                            <helpers:TaskManagerCommandParameterValue ParameterType="Delete">
                                <helpers:TaskManagerCommandParameterArgument ItemType="System.String" ItemKey="BucketName" />
                                <helpers:TaskManagerCommandParameterArgument ItemType="System.String" ItemKey="Key" />
                            </helpers:TaskManagerCommandParameterValue>
                        </Button.CommandParameter>
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="BucketsModelTemplate" DataType="{x:Type fsharp:TaskResponse}">
            <ItemsControl ItemTemplateSelector="{StaticResource taskManagerChildDataTemplateSelector}" ItemsSource="{Binding Item.Buckets}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>
        
        <DataTemplate x:Key="BucketItemsModelTemplate" DataType="{x:Type fsharp:TaskResponse}">
            <Border Name="border" BorderBrush="DarkGray" BorderThickness="10" Padding="5" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding Item.BucketItems}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Item Name" Binding="{Binding Path=Key}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="20"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Size:"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=Item.Size}"/>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="LastModified:"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=Item.LastModified}"/>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Owner:"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Path=Item.Owner}"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="MimeType:"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding Path=Item.MimeType}"/>
                        <TextBlock Grid.Row="1" Grid.Column="2" Text="Extension:"/>
                        <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding Path=Item.Extension}"/>
                        <Button Grid.Row="3" Grid.Column="0" Content="Download" Command="{x:Static uc:TaskCommands.StartMiniTask}" Style="{StaticResource ButtonDark}">
                            <Button.CommandParameter>
                                <helpers:TaskManagerCommandParameterValue ParameterType="Download">
                                    <helpers:TaskManagerCommandParameterArgument ItemType="System.String" ItemKey="BucketName" />
                                    <helpers:TaskManagerCommandParameterArgument ItemType="System.String" ItemKey="Key" />
                                </helpers:TaskManagerCommandParameterValue>
                            </Button.CommandParameter>
                        </Button>

                        <Button Grid.Row="3" Grid.Column="3" Content="Delete" Command="{x:Static uc:TaskCommands.StartMiniTask}" Style="{StaticResource ButtonDark}">
                            <Button.CommandParameter>
                                <helpers:TaskManagerCommandParameterValue ParameterType="Delete">
                                    <helpers:TaskManagerCommandParameterArgument ItemType="System.String" ItemKey="BucketName" />
                                    <helpers:TaskManagerCommandParameterArgument ItemType="System.String" ItemKey="Key" />
                                </helpers:TaskManagerCommandParameterValue>
                            </Button.CommandParameter>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="TranscriptionJobTemplate" DataType="{x:Type fsharp:TaskResponse}">
            <Border Name="border" BorderBrush="DarkGray" BorderThickness="10" Padding="5" Margin="5">
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ApplicationErrorInfoTemplate" DataType="{x:Type fsharp:TaskResponse}">
            <Border Name="border" BorderBrush="DarkGray" BorderThickness="10" Padding="5" Margin="5">
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="ApplicationMessageInfoTemplate" DataType="{x:Type fsharp:TaskResponse}">
            <Border Name="border" BorderBrush="DarkGray" BorderThickness="10" Padding="5" Margin="5">
            </Border>
        </DataTemplate>

    </UserControl.Resources>
    
    <DockPanel Margin="20">
        <StackPanel x:Name="gridContainer" DockPanel.Dock="Top">
            <Grid x:Name="grdMembers" ShowGridLines="False" Margin="10">
                <Grid.RowDefinitions>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                </Grid.ColumnDefinitions>
            </Grid>
        </StackPanel>
        <Button x:Name="btnStartTask" Content="Start Task" DockPanel.Dock="Top" Height="30" Width="100" Margin="0,5,0,0" Command="{x:Static uc:TaskCommands.StartTask}" Style="{StaticResource ButtonDark}" />
        <ListBox x:Name="lbTaskResponses" Margin="20, 10, 20, 10" Background="{StaticResource NormalBackground}" ItemTemplateSelector="{StaticResource taskManagerDataTemplateSelector}" />
    </DockPanel>
</UserControl>
